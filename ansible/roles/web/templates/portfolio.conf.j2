server {
    listen 80 default_server;
    server_name zakibawade.in www.zakibawade.in;

    root /var/www/html/assets/current;
    index index.html;

    #################################################
    # SECURITY HEADERS
    #################################################

    add_header X-Frame-Options "DENY" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Permissions-Policy "geolocation=(), microphone=(), camera=()" always;

    add_header Content-Security-Policy "
        default-src 'self';
        script-src 'self';
        img-src 'self' data:;
        style-src 'self' 'unsafe-inline';
        connect-src 'self';
        font-src 'self';
        object-src 'none';
        base-uri 'self';
        frame-ancestors 'none';
    " always;

    #################################################
    # RATE LIMITING (APPLIED ONCE)
    #################################################

    limit_req zone=req_limit burst=20 nodelay;

    #################################################
    # BLOCK HIDDEN FILES
    #################################################

    location ~ /\.(?!well-known) {
        deny all;
        access_log off;
        log_not_found off;
    }

    #################################################
    # UMAMI INTERNAL ANALYTICS PROXY
    #################################################

    location /umami/ {
        proxy_pass http://192.168.0.12:3000/;

        proxy_http_version 1.1;
        proxy_set_header Host zakibawade.in;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    #################################################
    # VISITOR COUNTER (CACHED)
    #################################################

    location /api/visitors {
        proxy_cache umami_cache;
        proxy_cache_valid 200 60s;

        proxy_pass http://192.168.0.12:3000/api/websites/{{ umami_website_id }}/stats?startAt=0&endAt=4102444800000;

        proxy_set_header Authorization "Bearer {{ umami_token }}";
    }

    #################################################
    # STATIC SITE
    #################################################

    location / {
        try_files $uri $uri/ /index.html;
    }

    autoindex off;
}
